<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jdslk.calculusprime.MainActivity"
    android:background="@drawable/gradient_background"
    tools:showIn="@layout/app_bar_main">


    <RelativeLayout
        android:id="@+id/display_frag_in_MainActivity"
        android:layout_width="match_parent"
        android:layout_height="210dp">
    </RelativeLayout>


    <Spinner
        android:id="@+id/topics_spinner"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="50dp"
        android:textSize="14sp"
        android:textColor="#f2f2f2"
        android:background="@drawable/spinner_gradient_background" />


    <RelativeLayout
        android:id="@+id/keypad_frag_in_MainActivity"
        android:layout_width="match_parent"
        android:layout_height="260dp">
    </RelativeLayout>


</LinearLayout>
